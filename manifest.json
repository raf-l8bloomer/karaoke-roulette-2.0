{
    "manifest_version": 3,
    "name": "Karaoke Roulette",
    "version": "2.0.0",
    "description": "Add new prompts, remove them, sping the roulette and sing!",
    "author": "L8BLoomer Studio",
    "icons": {
        "16": "assets/karaoke-roulette-icon-16x16.png",
        "32": "assets/karaoke-roulette-icon-32x32.png",
        "48": "assets/karaoke-roulette-icon-48x48.png",
        "128": "assets/karaoke-roulette-icon-128x128.png"
      },
    "permissions": [
        "sidePanel"
    ],
    "action": {
        "default_title": "Click to open panel"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    }
}